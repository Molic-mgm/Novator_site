# MongoDB connection string
MONGO_URI=mongodb+srv://user:password@host/dbname

# JWT secret for auth tokens
JWT_SECRET=change_me_super_secret

# Optional: domains allowed by CORS (comma separated is not supported; set each variable separately)
FRONTEND_URL=https://www.studiaorbita.ru
ADMIN_URL=https://www.studiaorbita.ru/admin

# Optional: server port
PORT=4000

# Optional: rate limiter (defaults in index.js)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Optional: restart delay when server crashes (ms)
RESTART_DELAY_MS=5000
